                        maxHp += 3;
                        var addHp = maxHp - hp;
                    }
                    hp += addHp;
                    console_check_command("[money_take=" + string(cost) + "]");
                    indicate(cost, "-$");
                    global.selectedTower = noone;
                }
            }
        }
    }
}
